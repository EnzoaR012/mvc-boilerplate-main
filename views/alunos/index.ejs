<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>CRUD de Alunos</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }

    h1, h2 {
      color: #333;
    }

    form {
      margin-bottom: 20px;
    }

    input, select, button {
      margin-right: 10px;
      padding: 5px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      border: 1px solid #ccc;
      padding: 8px;
    }

    th {
      background-color: #f2f2f2;
    }

    .inline-form {
      display: inline;
    }
  </style>
</head>
<body>
  <h1>Cadastro de Alunos</h1>

  <form action="/alunos" method="POST">
    <input name="nome" placeholder="Nome" required>
    <input name="email" placeholder="Email" required>
    <select name="curso_id" required>
      <option value="">Selecione um curso</option>
      <% cursos.forEach(curso => { %>
        <option value="<%= curso.id %>"><%= curso.nome %></option>
      <% }) %>
    </select>
    <button type="submit">Adicionar Aluno</button>
  </form>

  <h2>Alunos Cadastrados</h2>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>A√ß√µes</th>
      </tr>
    </thead>
    <tbody>
      <% alunos.forEach(aluno => { %>
        <tr>
          <td><%= aluno.nome %></td>
          <td><%= aluno.email %></td>
          <td>
            <form class="inline-form" action="/alunos/edit/<%= aluno.id %>" method="POST">
              <input name="nome" placeholder="Novo nome" required>
              <input name="email" placeholder="Novo email" required>
              <button type="submit">Editar</button>
            </form>
            <form class="inline-form" action="/alunos/delete/<%= aluno.id %>" method="POST">
              <button type="submit" onclick="return confirm('Deseja excluir este aluno?')">Apagar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <hr>

  <h2>Cadastrar Novo Curso</h2>
  <form action="/cursos" method="POST">
    <input name="nome" placeholder="Nome do curso" required>
    <button type="submit">Adicionar Curso</button>
  </form>

  <h2>Cursos Cadastrados</h2>
  <ul>
    <% cursos.forEach(curso => { %>
      <li>
        <form class="inline-form" action="/cursos/edit/<%= curso.id %>" method="POST">
          <input name="nome" value="<%= curso.nome %>" required>
          <button type="submit">‚úèÔ∏è</button>
        </form>
        <form class="inline-form" action="/cursos/delete/<%= curso.id %>" method="POST">
          <button type="submit" onclick="return confirm('Tem certeza que deseja excluir este curso?')">üóëÔ∏è</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
